{
	"description": "Tooling for the language server protocol",
	"devDependencies": {
		"typescript-esbuild": "0.4.5"
	},
	"main": "./lib/main.js",
	"name": "vscode-languageserver-tools",
	"scripts": {
		"clean": "node ../node_modules/rimraf/dist/esm/bin.mjs lib && node ../node_modules/rimraf/dist/esm/bin.mjs dist",
		"compile": "node ../build/bin/tsc -b ./tsconfig.json",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"watch": "node ../build/bin/tsc -b ./tsconfig-watch.json -w"
	},
	"type": "module"
}
